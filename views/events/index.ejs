<%- layout("/layouts/boilerplate") %>
<%=success%>
<body>
  <h3>All Events</h3>
  <!-- <form method="GET" action="/events/new">
    <button>Create New Event</button>
  </form> -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let event of allEvents) { %>
      <a href="/events/<%= event._id %>" class="event-link">
        <div class="card col event-card">
          <img
            src="<%= event.image.url %>"
            class="card-img-top"
            alt="event_image"
            style="height: 20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= event.eventName %></b><br />
              <%= event.location %><br />
              &#8377;<%= event.price.toLocaleString("en-IN") %>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</body>


