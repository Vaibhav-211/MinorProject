<% layout("/layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your Event</h3>
      <form action="/events/<%= event._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <!-- Event Name -->
        <div class="mb-3">
          <label for="eventName" class="form-label">Event Name</label>
          <input
            type="text"
            id="eventName"
            name="event[eventName]"
            value="<%= event.eventName %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter an event name.</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="event[description]"
            class="form-control"
            required
          ><%= event.description %></textarea>
          <div class="invalid-feedback">Please provide a description.</div>
        </div>
        <div class="mb-3">
          Original Event Image <br>
          <img src="<%=originalImageUrl%>" alt="" srcset="">
        </div>
        <!-- Image URL -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input name="event[image]" type="file" class="form-control" />
        </div>

        <!-- Start and End DateTime -->
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="startDateTime" class="form-label">Start Date & Time</label>
            <input
              type="datetime-local"
              id="startDateTime"
              name="event[startDateTime]"
              value="<%= new Date(event.startDateTime).toISOString().slice(0, 16) %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please select a valid start date and time.</div>
          </div>

          <div class="mb-3 col-md-6">
            <label for="endDateTime" class="form-label">End Date & Time</label>
            <input
              type="datetime-local"
              id="endDateTime"
              name="event[endDateTime]"
              value="<%= new Date(event.endDateTime).toISOString().slice(0, 16) %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please select a valid end date and time.</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            id="location"
            name="event[location]"
            value="<%= event.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a location.</div>
        </div>

        <!-- Country -->
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            id="country"
            name="event[country]"
            value="<%= event.country %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a country.</div>
        </div>

        <!-- Venue Type -->
        <div class="mb-3">
          <label for="venueType" class="form-label">Venue Type</label>
          <select id="venueType" name="event[venueType]" class="form-select" required>
            <option value="Indoor" <%= event.venueType === 'Indoor' ? 'selected' : '' %>>Indoor</option>
            <option value="Outdoor" <%= event.venueType === 'Outdoor' ? 'selected' : '' %>>Outdoor</option>
            <option value="Virtual" <%= event.venueType === 'Virtual' ? 'selected' : '' %>>Virtual</option>
          </select>
          <div class="invalid-feedback">Please select a venue type.</div>
        </div>

        <!-- Price -->
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            id="price"
            name="event[price]"
            value="<%= event.price %>"
            class="form-control"
            min="0"
            step="0.01"
            required
          />
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <button type="submit" class="btn btn-dark edit-btn mt-3">Edit Event</button>
      </form>
    </div>
  </div>
</body>
